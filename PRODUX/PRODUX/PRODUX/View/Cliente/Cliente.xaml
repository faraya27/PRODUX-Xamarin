<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRODUX.View.Cliente.Cliente">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Cliente"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout>
                <Label Text="Cédula:"/>
                <Entry/>
            </StackLayout>
            <StackLayout>
                <Label Text="Nombre:"/>
                <Entry/>
            </StackLayout>
            <StackLayout>
                <Label Text="Telefono:"/>
                <Entry/>
            </StackLayout>
            <StackLayout>
                <Label Text="Email:"/>
                <Entry/>
            </StackLayout>
            <StackLayout>
                <Label Text="Estado:"/>
                <Switch/>
            </StackLayout>
            <StackLayout>
                <Label Text="Dirección:"/>
                <Editor/>
            </StackLayout>
            <StackLayout>
                <Button Text="Guardar"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>