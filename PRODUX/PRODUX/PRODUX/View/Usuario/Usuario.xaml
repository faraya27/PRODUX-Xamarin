<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRODUX.View.Usuario.Usuario">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Usuario"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout>
                <Label Text="Usuario:"/>
                <Entry Text="{Binding Usuario}"/>
            </StackLayout>
            <StackLayout>
                <Label Text="Contraseña:"/>
                <Entry/>
            </StackLayout>
            <StackLayout>
                <Label Text="Estado:"/>
                <Switch IsToggled="{Binding Estado}"/>
            </StackLayout>
            <StackLayout>
                <Button Text="Guardar" Command="{Binding GuardarUsuarioCommand}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>