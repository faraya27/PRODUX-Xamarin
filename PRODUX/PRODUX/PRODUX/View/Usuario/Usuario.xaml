<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRODUX.View.Usuario.Usuario" 
             Title="Nuevo">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Usuario:"/>
                <Entry Text="{Binding Usuario}"/>
            </StackLayout>
            <StackLayout>
                <Label Text="Contraseña:"/>
                <Entry IsPassword="True" Text="{Binding Contrasenna}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Estado:"/>
                <Switch IsToggled="{Binding Estado}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Guardar" Command="{Binding GuardarUsuarioCommand}" BackgroundColor="Black" TextColor="White"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>